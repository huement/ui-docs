mixin navbar(menu_items)
  header
    .navbar.navbar-expand-md.navbar-dark.fixed-top.bg-dark.z-max.mb-none.mt-none.pt-none.pb-none
      .container-fluid
        a.navbar-brand(href='#')
          img.oversized-logo(src=imgPath+"logo.svg" alt="main logo")
        button.navbar-toggler
          span.navbar-toggler-icon
        .collapse.navbar-collapse
          ul.navbar-nav.ml-auto.mb-none.mt-none.pt-none.pb-none
            each menu_item in menu_items
              li.nav-item
                a.nav-link(href= menu_item.url) #{menu_item.name}
                  i(class="hui hui-"+menu_item.icon)


mixin menu(menu_items)
  ul.menu-inner
    each top_item in menu_items
      li.menu-item(class= navLinkActive)
        a(href= top_item.link, class= navLinkActive == top_item.title ? 'm-menu-link is-active' : 'm-menu-link')= top_item.title

