mixin icon(iClass)
  span(class="hui "+iClass)

mixin img(fileName)
  - const url = `upload/${fileName}`
  - const url2x = url.replace(/(\.\w+$)/, '@2x$1')

  img(src=url srcset=`${url2x} 2x`)&attributes(attributes)

mixin script(url)
  script(src=url)&attributes(attributes)

mixin style(url)
  link(rel='stylesheet' href=url)&attributes(attributes)

mixin image(url)
  img(src=url)&attributes(attributes)

mixin iFont(pre, family, icon)
  i(class= pre + " " + family + "-" + icon)

mixin mojoButton(size,color,text)
  button(class="btn "+size+" "+color)
    | #{text}

//- USAGE
//- +loop(10)
//-   p This will appear 10 times
mixin loop(count)
  - var n = 0
  while n < count
    block
    - n++

mixin docs-heading(id, name)
  .head-block(id=id)
    h1.s-title
      | #{name}
      a.anchor(href='#'+id aria-hidden='true') #
