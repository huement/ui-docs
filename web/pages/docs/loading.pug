extends ../../layout/doc

append config
  - var slug = 'loading'
  - var parent = 'utilities'
  - var title = 'Loading - Utilities - Mojo Framework'
  - var metaDesc = 'Loading indicator is used for loading or updating. Mojo Framework is a lightweight, responsive and modern CSS framework for faster and extensible development.'

block content
  +docs-heading('loading', 'Loading')

  p.lead
    | Loading indicator is used for loading or updating.
    | You can add the #[code loading] class to a container for loading status.

  .docs-demo.columns
    .column.col-12.text-center
      .loading

  p
    | Add the #[code loading-lg] class for large size.

  .docs-demo.columns
    .column.col-12.text-center
      .loading.loading-lg

  :highlightify(lang="html")
    <!-- loading element -->
    <div class="loading"></div>
    <div class="loading loading-lg"></div>
