extends ../../layout/templates

append ExtraHeader
  //-  Custom styles for this template
  link(href= path + "www/css/cover.css", rel="stylesheet")
  style.
    .bd-placeholder-img {
      font-size: 1.125rem;
      text-anchor: middle;
      -webkit-user-select: none;
      -moz-user-select: none;
      user-select: none;
    }

    @media (min-width: 768px) {
      .bd-placeholder-img-lg {
        font-size: 3.5rem;
      }
    }

    .b-example-divider {
      height: 3rem;
      background-color: rgba(0, 0, 0, .1);
      border: solid rgba(0, 0, 0, .15);
      border-width: 1px 0;
      box-shadow: inset 0 .5em 1.5em rgba(0, 0, 0, .1), inset 0 .125em .5em rgba(0, 0, 0, .15);
    }

    .b-example-vr {
      flex-shrink: 0;
      width: 1.5rem;
      height: 100vh;
    }

    .bi {
      vertical-align: -.125em;
      fill: currentColor;
    }

    .nav-scroller {
      position: relative;
      z-index: 2;
      height: 2.75rem;
      overflow-y: hidden;
    }

    .nav-scroller .nav {
      display: flex;
      flex-wrap: nowrap;
      padding-bottom: 1rem;
      margin-top: -1px;
      overflow-x: auto;
      text-align: center;
      white-space: nowrap;
      -webkit-overflow-scrolling: touch;
    }

append config
    - var title = "Cover Image Homepage Template"
    - var metaDesc = "Great Landing Page Idea!"
    - var parent = 'templates'
    - var slug = 'cover'

block content
  .cover-container.make-flex.w-100.h-100.p-3.mx-auto.flex-column

    header.mb-auto
      div
        h3.float-md-start.mb-0 Cover
        nav.nav.nav-masthead.justify-content-center.float-md-end
          a.nav-link.fw-bold.py-1.px-0.active(aria-current="page", href="#") Home
          a.nav-link.fw-bold.py-1.px-0(href="#") Features
          a.nav-link.fw-bold.py-1.px-0(href="#") Contact

    main.px-3
      h1 Cover your page.
      p.lead Cover is a one-page template for building simple and beautiful home pages. Download, edit the text, and add your own fullscreen background photo to make it your own.
      p.lead
        a.btn.btn-lg.btn-secondary.fw-bold.border-white.make-bg-white(href="#") Learn more

    footer.mt-auto.text-white-50
      p
        | Cover template for
        a.text-white(href="https://getbootstrap.com/") Bootstrap, by
        a.text-white(href="https://twitter.com/mdo") @mdo
